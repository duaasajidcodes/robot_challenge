#!/usr/bin/env ruby
# frozen_string_literal: true

# Test runner for Robot Challenge
# This script runs tests with the test environment configuration

# Set test environment
ENV['ROBOT_ENV'] = 'test'

# Load test configuration
require_relative '../lib/robot_challenge'
test_config = RobotChallenge::Config.for_environment('test')

puts 'ðŸ§ª Running Robot Challenge Tests'
puts "Environment: #{ENV.fetch('ROBOT_ENV', nil)}"
puts "Table Size: #{test_config.table_width}x#{test_config.table_height}"
puts "Debug Mode: #{test_config.debug_mode?}"
puts "Test Mode: #{test_config.test_mode?}"
puts '=' * 50

# Run RSpec with test configuration
exec('bundle', 'exec', 'rspec', *ARGV)
